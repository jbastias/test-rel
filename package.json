{
  "name": "test-rel",
  "version": "1.1.1",
  "description": "testing releases",
  "main": "index.js",
  "bin": {
    "test-rel": "test-rel"
  },
  "scripts": {
    "dev": "npm run build -- --watch",
    "build": "rm -rf dist && mkdir dist && ./node_modules/.bin/babel --verbose src --out-dir dist",
    "format": "prettier --write src/*.js src/*/*.js",
    "test": "jest ./src",
    "semantic-release": "semantic-release",
    "lint": "eslint src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/exec": "^5.0.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "semantic-release": "^15.13.31"
  },
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "yargs": "^15.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jbastias/test-rel.git"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "lint",
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "./publish.sh ${nextRelease.version}",
          "failCmd": "./fail.sh ${nextRelease.version}"
        }
      ],
      "@semantic-release/github"
    ]
  }

}
